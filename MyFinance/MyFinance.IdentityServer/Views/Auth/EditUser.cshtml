@model RegisterViewModel
<h1>@Model.UserName email edit</h1>

<form class="form-group" asp-controller="Auth" , asp-action="EditUser" method="post">

    <input hidden asp-for="ReturnUrl" value="ViewUser" />

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" value="@Model.Email"/>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
</form>
